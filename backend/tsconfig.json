{
    "compilerOptions": {
      "lib": ["es6", "dom", "esnext.asynciterable"],
      "module": "commonjs",
      "noImplicitReturns": false,
      "outDir": "dist",
      "sourceMap": true,
      "emitDecoratorMetadata": true,
      "experimentalDecorators": true,
      "allowSyntheticDefaultImports": true,
      "target": "es2017",
        "baseUrl": ".",
        "paths": {
            "*": [
                "node_modules/*",
                "src/types/*"
            ]
        }
    },
    "exclude": [
        "node_modules"
    ],
    "compileOnSave": true,
    "include": [
        "src/**/*"
    ]
}